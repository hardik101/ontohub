%ul.nav.navbar-nav.navbar-right
  - if user_signed_in?
    %li.dropdown
      = link_to '#', {class: 'dropdown-toggle', 'data-toggle' => 'dropdown'} do
        #{current_user.name}
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to edit_user_registration_path do
            Account
            - if current_user.display_alert?
              %strong.badge !
        %li= link_to "Teams", :teams
        %li= link_to "SSH Keys", :keys
        %li.divider{role: 'presentation'}
        %li= link_to 'Sign out', :destroy_user_session, method: :delete
  - else
    %li= link_to 'Sign in', [:new, :user, :session]
    %li= link_to 'Sign up', [:new, :user, :registration]
